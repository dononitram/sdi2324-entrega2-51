{% extends "layout.twig" %}
{% block title %} System users {% endblock %}

{% block main_container %}
	<h2>System users</h2>

	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Email</th>
					<th>Name</th>
					<th>Surname</th>
					<th class="col-md-1"></th>
				</tr>
			</thead>
			<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.email }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td><a href="/users/edit/{{ user._id }}">Edit</a></td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

	<!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
	<div class="row text-center">
		<ul class="pagination">
			{%for page in pages%}
				<li class="page-item" id="pi-{{ page }}">
					<a class="page-link" href="/requests/?page={{ page}}">{{page}}</a>
				</li>
			{%endfor%}
			<script>
				$("#pi-" + "{{ currentPage }}").addClass("active");
			</script>
		</ul>
	</div>


{% endblock %}
