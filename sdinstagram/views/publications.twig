{% extends "layout.twig" %}
{% block title %} SDInstagram {% endblock %}
{% block main_container %}
    <h2>My publications</h2>
    <!-- Ver Canciones Favoritas-->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for publication in publications %}
                <tr>
                    <td>{{ publication.date }}</td>
                    <td>{{ publication.title }}</td>
                    <td>{{ publication.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {%for page in pages%}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/publications/?page={{ page }}">{{ page }}</a>
                </li>
            {%endfor%}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}